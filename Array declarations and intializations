#include <stdio.h>
#define size_arr 5//method 1
int main()
{
    int i;
    char ch[]={'a','b','c','d','e'};
    printf("Base address of char array is:%p\n",ch);
    ch[5]='f';
    ch[6]='g';
     for(i=0;i<7;i++)
    {
        printf("value at index %d is %c\n",i,ch[i]);
    }
     
     
    char s[5]={'s','a','i','l','u'};
    for(i=0;i<5;i++)
    {
        printf("value at index %d is %c\n",i,s[i]);
    }
    
    
    int arr[]={1,2,3,4,5};
    int no_ele=sizeof(arr)/sizeof(int);
    printf("Number of elementsis:%d\n",no_ele);
    
    printf("address of first element:%p\nvalue at index 0:%d\nn",arr,arr[0]);
    printf("address of second element:%p\nvalue at index 1:%d\n",arr+1,arr[1]);
    printf("address of third element:%p\nvalue at index 2:%d\n",arr+2,arr[2]);
    printf("address of fourth element:%p\nvalue at index 3:%d\n",arr+3,arr[3]);
    printf("address of fifth element:%p\nvalue at index 4:%d\n",arr+4,arr[4]);
    
    for(i=0;i<no_ele;i++)
    {
        printf("address of arr[%d]is:%p\nvalue at index %d is:%d\n",i,arr+i,i,arr[i]);
    }
    
    
     int j=0;
     while(j<5)
     {
         printf("value at index %d:%d\n",j,arr[j]);
         j++;
     }
    
    
    return 0;
}

